apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ tas_single_node_nginx_pod }}"
  namespace: nginx-system
  labels:
    app: nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          # 1.20
          image: "{{ tas_single_node_nginx_image }}"
          args:
            - nginx
            - -g
            - daemon off;
            - -c
            - /etc/nginx/conf/nginx.conf
          ports:
            - name: https
              containerPort: {{ tas_single_node_nginx_port1 }}
              hostPort: {{ tas_single_node_nginx_hostport1 }}
            - name: http
              containerPort: {{ tas_single_node_nginx_port2 }}
              hostPort: {{ tas_single_node_nginx_hostport2 }}
          volumeMounts:
            - mountPath: /certs
              name: nginx-certs
              readOnly: true
            - mountPath: /etc/nginx/conf
              name: nginx-config
              #subPath: nginx.conf
              #readOnly: true
      restartPolicy: Always
      volumes:
        - name: nginx-certs
          secret:
            secretName: nginx-certs
        - name: nginx-config
          configMap:
            defaultMode: 420
            name: nginx-config
